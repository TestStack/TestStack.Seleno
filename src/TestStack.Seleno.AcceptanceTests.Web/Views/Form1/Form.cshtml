@using ChameleonForms
@using ChameleonForms.Component
@model TestStack.Seleno.AcceptanceTests.Web.ViewModels.Form1ViewModel

@{
    ViewBag.Title = ViewContext.RouteData.Values["action"];
}

<h1>@ViewBag.Title</h1>

@using (var f = Html.BeginChameleonForm())
{
    using (var s = f.BeginSection("Form"))
    {
        @s.FieldFor(m => m.RequiredString)
        @s.FieldFor(m => m.RequiredInt)
        @s.FieldFor(m => m.RequiredBool)
        @s.FieldFor(m => m.RequiredNullableBool)
        @s.FieldFor(m => m.OptionalBool)
        @s.FieldFor(m => m.OptionalBool2)
        @s.FieldFor(m => m.OptionalBool3)
        
        @s.FieldFor(m => m.OptionalInt)
        @s.FieldFor(m => m.RequiredEnum)
        @s.FieldFor(m => m.RequiredNullableEnum)
        @s.FieldFor(m => m.OptionalEnum)
        @s.FieldFor(m => m.RequiredListId)

        //Radio button Group
        @s.FieldFor(m => m.OptionalBool).AsList()
        @s.FieldFor(m => m.OptionalListId).AsList()
        //Text area
        @s.FieldFor(m => m.TextAreaField).Cols(60).Rows(4)
    }
    using (var n = f.BeginNavigation())
    {
        @n.Submit("Submit")
    }
}
